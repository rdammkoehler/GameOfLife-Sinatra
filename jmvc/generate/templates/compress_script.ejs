//js apps/<%= application_name %>/compress.js

include = {
    done : function(total){
        var compressed = include.collectAndCompress(total);
        new include.File('apps/<%= application_name %>/production.js').save(compressed);
        print("Compressed to 'apps/<%= application_name %>/production.js'.");
        include.plugins('documentation')
        var app = new include.Doc.Application(total, "<%= application_name %>");
        app.generate();
        print("Generated docs.");
        if(!window.MVCDontQuit) quit();
    },
    env: "compress"
}

load('jmvc/rhino/env.js');
Envjs('apps/<%= application_name %>/index.html', {scriptTypes : {"text/javascript" : true,"text/envjs" : true}});